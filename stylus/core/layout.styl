body
    background #eee
    margin 0

header
    display block
    background #222
    margin-bottom 20px

    .page-width
        line-height 60px
        clearfix()

    .logo
        float left
        type-size
        color #999

.page-width
    max-width 1000px
    margin auto

.row
    grid-system()
    cols(20px, '.col', true, '-', 800px)

.left
    float left

.right
    float right

#view, #view > .row
    height 100%

.sidebar
    background color-black
    width sidebar-width
    color color-white
    height 100%
    display block
    padding 0
    position fixed
    left 0
    top 0

    h2
        margin 10px 30px
        color color-grey

    ul
        debullet()

        li
            display block
            padding 10px 30px
            color color-white
            cursor default

            &:hover
                color color-green
                background rgba(#fff, .05)

            &.active
                background #000

tab-color(color)
    background color

.nav-tabs
    position fixed
    left 0
    top 0
    line-height nav-height
    debullet()
    padding-left sidebar-width
    width 100%
    box-sizing border-box

    li
        float left
        text-align center
        color #fff
        font-weight bold

        &.tab-problem
            tab-color(color-green)

        &.tab-script
            tab-color(color-blue)

        &.tab-solution
            tab-color(color-red)

        &.active
            background transparent
            color color-black
            font-weight normal

.exercise
    padding 20px
    padding-left sidebar-width + 20px
    padding-top nav-height + 20px
    position relative

    .problem
        type-size 1.3
        font-weight bold
        float none

        pre
            background color-black
            padding 10px
            border-radius()
            color color-purple
            type-size 1

    .script

        .empty
            font-style italic
            margin-bottom 20px